generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  hash  String
  name  String?

  Session Session[]

  professor Professor?
}

model Session {
  id        String   @id
  userId    Int
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Professor {
  id    Int    @id @default(autoincrement())
  name  String
  major String

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}
